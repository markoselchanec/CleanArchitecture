@model StudentViewModel

<div class="body-content">
    <div class="container">

        <h2 class="text-primary">@Model.Name</h2>

        <hr />

        <h2 class="text-primary">Classes:</h2>

        <br />

        <div class="row">
        @foreach (var course in Model.Courses)
        {
            <div class="col-3">
            <div class="card" style="width: 18rem;">
                <img src="@course.ImageUrl" style="object-fit:cover; height:300px;" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title text-primary">@course.Name</h5>
                    <p class="card-text text-secondary">@course.Description</p>
                </div>
            </div>
            </div>
        }
        </div>
    </div>

</div>